---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
const entries = await getCollection("portfolio");
---

<BaseLayout>
  <main class="bg-gray-100 text-gray-800 font-sans">
    <div class="max-w-4xl mx-auto p-4">
      <h1 class="text-3xl font-bold mb-4">My Project Portfolio</h1>
      <ul class="space-y-6">
        {entries.map(entry => (
          <li class="p-4 bg-white rounded-lg shadow">
            <h2 class="text-xl font-semibold">{entry.data.title}</h2>
            <p class="text-sm text-gray-500">{entry.data.date}</p>
            <p class="mt-2">{entry.body}</p>
            {entry.data.repo && (
              <a class="text-blue-500" href={entry.data.repo}>GitHub Repo</a>
            )}
          </li>
        ))}
      </ul>
    </div>
  </main>
</BaseLayout>
