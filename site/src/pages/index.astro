---
import BaseLayout from "../layouts/BaseLayout.astro";
import FilteredTimelineWidget from "../components/FilteredTimelineWidget.jsx";
import { getCollection } from "astro:content";
import Hero from "../components/Hero.astro";

const entries = await getCollection("portfolio");
const tags = [...new Set(entries.flatMap((e) => e.data.tags ?? []))];
---

<BaseLayout>
  <main class="p-6">
    <h1 class="text-3xl font-bold mb-6">My Project Portfolio</h1>
      <Hero
      name="Your Name"
      tagline="I build and automate workflows with Docker, Terraform, and Tailwind."
      intro="Welcome to my project portfolio. I specialize in backend APIs, automation, and modern web technologies."
      social={{
        github: "https://github.com/yourname",
        linkedin: "https://linkedin.com/in/yourprofile",
      }}
    />
    
    <FilteredTimelineWidget client:load entries={entries} tags={tags} />
  </main>
</BaseLayout>
