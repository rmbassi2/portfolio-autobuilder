---
// Hero.astro
const { name, tagline, intro, social } = Astro.props;
import { ChevronDown } from "@lucide/astro";

---
<section class="bg-card-bg dark:bg-gray-900 text-gray-900 dark:text-gray-100 pt-12 pb-33">
  <div class="max-w-4xl mx-auto px-4 flex flex-col items-center text-center space-y-6">
    <h1 class="text-4xl md:text-5xl font-bold font-sans">{name}</h1>

    <p class="text-lg max-w-2xl">{tagline}</p>
    <p class="text-base max-w-2xl">{intro}</p>

    <div class="flex justify-center gap-4">
      <a href="/about" class="btn-primary">About Me</a>
      <a href="/contact" class="btn-secondary">Contact</a>
    </div>

    <div class="flex justify-center items-center gap-2 mt-4">
      {social.github && (
        <!-- Light mode icon -->
                <img
                    src="/icons/github-mark.svg"
                    alt="GitHub logo"
                    class="w-5 h-5 block dark:hidden"
                />

                <!-- Dark mode icon -->
                <img
                    src="/icons/github-mark-white.svg"
                    alt="GitHub logo (dark)"
                    class="w-5 h-5 hidden dark:block"
                />
        <a href={social.github} aria-label="GitHub" target="_blank" rel="noopener" class="text-primary hover:text-primary-dark">
          GitHub
        </a>
      )}
      {social.linkedin && (
        <img
                    src="/icons/LinkedIn_icon.svg"
                    alt="LinkedIn logo"
                    class="w-5 h-5 block"
                />
                <a href={social.linkedin} aria-label="LinkedIn" target="_blank" rel="noopener" class="text-primary hover:text-primary-dark">
          LinkedIn
        </a>
      )}
    </div>
    <a href="#timeline" class="mt-6 text-indigo-500 hover:text-indigo-600 transition-colors" aria-label="Scroll to timeline">
  <ChevronDown class="h-6 w-6 animate-bounce" />
</a>
</section>
